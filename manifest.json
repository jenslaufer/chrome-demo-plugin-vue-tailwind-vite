{
    "manifest_version": 3,
    "name": "Demo Chrome Plugin",
    "version": "1.0.0",
    "action": {},
    "background": {
        "service_worker": "src/service_worker.js",
        "type": "module"
    },
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "content_scripts": [
        {
            "js": [
                "src/content.js"
            ],
            "matches": [
                "https://www.wikipedia.org/*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "index.html"
            ],
            "matches": [
                "https://www.wikipedia.org/*"
            ]
        }
    ]
}